<div class="banner"></div>
<div class="container mt-3">

  
  <form action="" method="post" class="mt-5">

    
      <div class="form-group row">
        <label for="playerName" class="col-sm-2 col-form-label">name: </label> 
        <div class="col-sm-6">
          <input type="text" id="playerName" name="playerName" class="form-control mb-3" maxlength="15" value="" required></input>
        </div>
      </div>        

      <div class="form-group row">
        <label for="characterId" class="col-sm-2 col-form-label">character: </label>
        <div class="col-sm-6">
          <select class="form-control" id="characterId" name="characterId">
          {{#each characters}}
            <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
          </select>
        </div>    
      </div>  
    
    <div class="submit-btn">
      <button type="submit" class="mt-3">submit</button>

     <a href="/players">回上一頁</a>
    </div>
    
      
  </form>
    
  
</div>
