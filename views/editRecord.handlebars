<div class="banner"></div>
<div class="container mt-3">

<form action="" method="post">

  <div class="form-group row">
    <label for="playerName" class="col-sm-2 col-form-label">日期: </label>
    <div class="col-sm-6">
      <input type="text" value={{date record.date}} disabled></input>
    </div> 
  </div>

  <div class="form-group row">
    <label for="playerName" class="col-sm-2 col-form-label">關卡: </label>
    <div class="col-sm-6">
      <select type="text">
        {{#each scenarios}}
        <option value="{{this.id}}"
         {{#ifCond this.id ../record.ScenarioId}}
            selected
         {{/ifCond}} 
        >{{this.name}}</option>
        {{/each}}
      </select>
    </div> 
  </div>

  <div class="form-group row">
    <label for="playerName" class="col-sm-2 col-form-label">關主: </label>
    <div class="col-sm-6">
      <select type="text">
        {{#each player}}
        <option value="{{this.id}}"
          {{#ifCond this.id ../record.playerId}}
            selected
          {{/ifCond}} 
        >{{this.name}}</option>
        {{/each}}
      </select>
    </div> 
  </div>

  <div class="submit-btn">
    <button type="submit" class="mt-3">submit</button>

    <a href="/records">回上一頁</a>
  </div>

</form>

</div>